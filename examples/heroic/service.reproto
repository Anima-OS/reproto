use heroic.v1 as v1;
use heroic.common as c;

service Heroic {
  /// Requested resource does not exist.
  returns c::ErrorMessage {
    status 404;
  }

  // an error response
  returns c::ErrorMessage {
    status 500;
  }

  POST `query/metrics` {
    accepts v1::Query {
      accept "application/json";
    }
  }
}
