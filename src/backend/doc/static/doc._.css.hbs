/* vim: ft=css
 */

body {
  background-color: {{bg}};
  font-family: {{font_family}};
  font-size: {{font_size}};
}

h1, h2, h3, h4, h5, h6 {
  margin: 0;
}

pre {
  margin: 10px 0;
}

p {
  margin: 10px 0;
}

section {
  margin: 10px 10px;
  padding: 10px;
  border-radius: 6px;
}

section > h1 {
  padding: 5px 10px;
  margin-bottom: 10px;
  background: {{title_bg}};
  border-radius: 4px;
  border: 1px solid {{title_border_color}};
}

section > h1 > .type {
  color: #000000;
  font-weight: bold;
  font-size: 50%;
  float: right;
  text-transform: uppercase;
}

section.section-type {
  background-color: {{type_bg}};
}

section.section-enum {
  background-color: {{enum_bg}};
}

section.section-tuple {
  background-color: {{tuple_bg}};
}

section.section-interface {
  background-color: {{interface_bg}};
}

section.section-service {
  background-color: {{service_bg}};
}

.variants {
}

.fields {
}

.fields > .field {
  margin: 5px 0px;
}

.fields > .field > .name {
  font-weight: bold;
}

.fields > .field > .name > .ty {
  margin-left: 5px;
}

.fields > .field > .name.required {
}

.ty-name {
  font-weight: bold;
}

.ty-array {
}

.ty-array-left {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.ty-array-right {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.ty-map-key {
  font-weight: bold;
}

.ty-map-separator {
  margin: 0 0.1em;
}

.ty-map-value {
  font-weight: bold;
}

table.returns {
}

table.returns > tbody > tr > td:first-child {
  padding-left: 0px;
}

table.returns > tbody > tr > td:last-child {
  padding-right: 0px;
}

table.returns td {
  vertical-align: top;
  padding: 10px 5px;
}

table.returns td.description {
  padding: 5px 5px;
  margin: 5px 0;
}

table.returns td.description p {
  margin: 5px 0;
}

.endpoint-body {
  padding: 0 10px;
}

.endpoint-title {
  font-family: {{endpoint_title_font}};
  font-size: {{endpoint_font_size}};
  padding: 12px;
  border-radius: 6px;
}

.endpoint-title .method {
  color: white;
  border-radius: 3px;
  padding: 0px 6px;
}

.endpoint-title .url {
  margin-left: 10px;
}

.endpoint-title.get {
  background-color: {{get_method_bg}};
}

.endpoint-title.get .method {
  background-color: {{get_method_fg}};
}

.endpoint-title.post {
  background-color: {{post_method_bg}};
}

.endpoint-title.post .method {
  background-color: {{post_method_fg}};
}

.endpoint-title.put {
  background-color: {{put_method_bg}};
}

.endpoint-title.put .method {
  background-color: {{put_method_fg}};
}

.endpoint-title.delete {
  background-color: {{delete_method_bg}};
}

.endpoint-title.delete .method {
  background-color: {{delete_method_fg}};
}
