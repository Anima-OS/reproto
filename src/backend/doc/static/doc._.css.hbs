/* vim: ft=css
 */

* {
  box-sizing: border-box;
}

body {
  background-color: #dddddd;
  font-family: {{font_family}};
  font-size: {{font_size}};
}

pre {
  margin: {{margin}} 0;
}

p {
  margin: {{margin}} 0;
}

ul {
  margin: {{margin}} 0;
  padding: 0;
}

.link {
  color: black;
  text-decoration: none;
}

.link:hover {
  text-decoration: underline;
}

.document-title {
  background-color: {{bg}};
  max-width: 1200px;
  margin: 0 auto;

  font-size: 2.4em;
  text-align: center;
  padding: {{margin}};
  margin-top: 0;
}

@media only screen and (min-width: 600px) {
  body {
    padding: 0 {{margin}};
  }

  .grid-container {
    max-width: 1200px;
    margin: 0 auto;

    display: grid;
    grid-template-columns: 300px 1fr;
    grid-gap: {{margin}};
  }
}

.grid-container {
  margin-top: -{{margin}};
  padding: 0 {{margin}};
  min-width: 400px;
  background-color: {{bg}};
}

.grid-packages {
}

.grid-decls {
}

.section-content {
  margin: {{margin}} 0;
}

.section-content:first-child {
  margin-bottom: 0;
}

.section-content:last-child {
  margin-bottom: 0;
}

/* title at the top of each section */
.section-title {
  padding: {{half_margin}} {{margin}};
  margin: 0;
  background: {{title_bg}};
  border: 1px solid {{title_border_color}};
}

/* type indicator at top-right of each section */
.section-title .type {
  float: right;
  font-size: 50%;

  color: #000000;
  font-weight: bold;
}

/* different type of sections */
.section-packages {
  background-color: {{packages_bg}};
}

.section-type {
  background-color: {{type_bg}};
}

.section-enum {
  background-color: {{enum_bg}};
}

.section-tuple {
  background-color: {{tuple_bg}};
}

.section-interface {
  background-color: {{interface_bg}};
}

.section-service {
  background-color: {{service_bg}};
}

.section-body {
}

.section-body > .description {
  margin: {{double_margin}} {{margin}};
}

.section-body *:last-child {
  margin-bottom: 0;
}

.packages-list {
  padding: 0 {{margin}};
}

ul.packages-list li {
  list-style: none;
  margin: {{margin}} 0;
}

.variants {
  padding: 0px {{margin}};
}

.sub-types {
  padding: 0px {{margin}};
}

.fields {
  padding: 0px {{margin}};
}

.fields > .field {
  margin: {{double_margin}} 0px;
}

.fields > .field > .name {
  font-weight: bold;
}

.fields > .field > .name > .ty {
  margin-left: {{half_margin}};
}

.fields > .field > .name.required {
}

.field-ident {
}

.field-modifier {
    margin-left: {{half_margin}};
}

.field-type {
    margin-left: {{half_margin}};
}

.field-alias {
    margin-left: {{half_margin}};
}

.field-alias-as {
    font-weight: bold;
}

.field-alias-name {
    margin-left: {{half_margin}};
}

.type-signed {
}

.type-unsigned {
}

.type-size-sep {
  margin: 0 0.1em;
}

.type-size {
    font-weight: bold;
}

.type-name {
  font-weight: bold;
}

.type-array {
}

.type-array-left {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.type-array-right {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.type-map {
}

.type-map-left {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.type-map-right {
  margin: 0 0.1em;
  font-weight: bold;
  color: #CECECE;
}

.type-map-sep {
  margin: 0 0.1em;
}

table.spaced {
  width: 100%;
}

table.spaced > tbody > tr > td:first-child {
  padding-left: 0px;
}

table.spaced > tbody > tr > td:last-child {
  padding-right: 0px;
}

table.spaced td {
  vertical-align: top;
  padding: {{margin}} {{half_margin}};
}

table.spaced td.type {
  width: 20%;
}

table.spaced td.description {
  width: 50%;
  padding: {{half_margin}} {{half_margin}};
  margin: {{half_margin}} 0;
}

table.spaced td.description p {
  margin: {{half_margin}} 0;
}

.endpoint {
  border-top-left-radius: 6px;
  border-top-right-radius: 6px;
  margin-bottom: {{margin}};
}

.endpoint.short {
  border-width: 0 !important;
  margin: 0 !important;
}

.endpoint.short .endpoint-title {
  border-radius: 0px;
  padding: {{half_margin}};
}

.endpoint.short .endpoint-body {
  padding: {{margin}} 0;
}

.endpoint.short .endpoint-body * {
  margin: 0;
  padding: 0;
  font-size: 1em;
  font-weight: normal;
}

.section-service-overview .section-body {
  padding: {{margin}};
}

.section-service-overview .description {
  margin: {{margin}} 0;
  padding: 0;
}

.section-types-overview .section-body {
  padding: {{margin}};
}

.section-types-overview h2 {
  margin: {{margin}} 0;
  font-size: 100%;
}

.section-types-overview .description {
  margin: {{margin}} 0;
  padding: 0;
}

.section-types-overview .description * {
  margin: 0;
  padding: 0;
  font-size: 1em;
  font-weight: normal;
}

.endpoint.get {
  border: 1px solid {{get_method_bg}};
}

.endpoint.post {
  border: 1px solid {{post_method_bg}};
}

.endpoint.delete {
  border: 1px solid {{delete_method_bg}};
}

.endpoint.put {
  border: 1px solid {{put_method_bg}};
}

.endpoint-title {
  display: block;

  margin: 0;

  border-top-left-radius: 6px;
  border-top-right-radius: 6px;

  color: black;
  font-family: {{endpoint_title_font}};
  font-size: {{endpoint_font_size}};
  font-weight: bold;
  padding: 12px;
  text-decoration: none;
}

.endpoint-title .method {
  color: white;
  border-radius: 3px;
  padding: 0px 6px;
}

.endpoint-title .url {
  margin-left: {{margin}};
  color: black;
  text-decoration: none;
}

.endpoint-title .url:hover {
  text-decoration: underline;
}

.endpoint-body {
  padding: {{margin}} {{double_margin}};
}

.endpoint-body > .description {
  margin: {{double_margin}} 0;
}

.endpoint.get .endpoint-title {
  background-color: {{get_method_bg}};
}

.endpoint.get .endpoint-title .method {
  background-color: {{get_method_fg}};
}

.endpoint.post .endpoint-title {
  background-color: {{post_method_bg}};
}

.endpoint.post .endpoint-title .method {
  background-color: {{post_method_fg}};
}

.endpoint.put .endpoint-title {
  background-color: {{put_method_bg}};
}

.endpoint.put .endpoint-title .method {
  background-color: {{put_method_fg}};
}

.endpoint.delete .endpoint-title {
  background-color: {{delete_method_bg}};
}

.endpoint.delete .endpoint-title .method {
  background-color: {{delete_method_fg}};
}
